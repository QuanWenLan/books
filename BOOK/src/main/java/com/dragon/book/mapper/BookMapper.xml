<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dragon.book.mapper.BookMapper">
	<resultMap id="BookResultMap" type="com.dragon.book.model.TBook">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="isbn" property="isbn" jdbcType="VARCHAR" />
		<result column="sm" property="sm" jdbcType="VARCHAR" />
		<result column="pub_id" property="pubId" jdbcType="VARCHAR" />
		<result column="cbrq" property="cbrq" jdbcType="VARCHAR" />
		<result column="zz" property="zz" jdbcType="VARCHAR" />
		<result column="type_id" property="typeId" jdbcType="INTEGER" />
		<result column="tsdl" property="tsdl" jdbcType="VARCHAR" />
		<result column="rkrq" property="rkrq" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="cs" property="cs" jdbcType="INTEGER" />

		<association property="tPublish" javaType="com.dragon.book.model.TPublish"
			column="pubId" foreignColumn="pubId">
			<id column="pub_id" property="pubId" jdbcType="VARCHAR" />
			<result column="pub_name" property="pubName" jdbcType="VARCHAR" />
		</association>
		<association property="tType" javaType="com.dragon.book.model.TType"
			column="typeId" foreignColumn="typeId">
			<id column="type_id" property="typeId" jdbcType="INTEGER" />
			<result column="lxmc" property="lxmc" jdbcType="VARCHAR" />
		</association>
	</resultMap>

	<resultMap id="BaseResultMap" type="com.dragon.book.model.BookAndEBook">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="isbn" property="isbn" jdbcType="VARCHAR" />
		<result column="sm" property="sm" jdbcType="VARCHAR" />
		<result column="pub_id" property="pubId" jdbcType="VARCHAR" />
		<result column="cbrq" property="cbrq" jdbcType="VARCHAR" />
		<result column="zz" property="zz" jdbcType="VARCHAR" />
		<result column="type_id" property="typeId" jdbcType="INTEGER" />
		<result column="tsdl" property="tsdl" jdbcType="VARCHAR" />
		<result column="rkrq" property="rkrq" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="cs" property="cs" jdbcType="INTEGER" />

		<association property="tPublish" javaType="com.dragon.book.model.TPublish"
			column="pubId" foreignColumn="pubId">
			<id column="pub_id" property="pubId" jdbcType="VARCHAR" />
			<result column="pub_name" property="pubName" jdbcType="VARCHAR" />
		</association>
		<association property="tType" javaType="com.dragon.book.model.TType"
			column="typeId" foreignColumn="typeId">
			<id column="type_id" property="typeId" jdbcType="INTEGER" />
			<result column="lxmc" property="lxmc" jdbcType="VARCHAR" />
		</association>
	</resultMap>
	<resultMap id="EBookResultMap" type="com.dragon.book.model.BookAndEBook">
		<id column="e_book_id" property="id" jdbcType="VARCHAR" />
		<result column="e_book_xm" property="eBookXm" jdbcType="VARCHAR" />
		<result column="type_id" property="typeId" jdbcType="INTEGER" />
		<result column="wjdz" property="wjdz" jdbcType="VARCHAR" />
		<result column="ms" property="ms" jdbcType="VARCHAR" />
		<result column="scsj" property="scsj" jdbcType="VARCHAR" />
		<result column="xzsj" property="xzsj" jdbcType="VARCHAR" />
		<result column="tszl" property="tszl" jdbcType="VARCHAR" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />

		<association property="tType" javaType="com.dragon.book.model.TType"
			column="typeId" foreignColumn="typeId">
			<id column="type_id" property="typeId" jdbcType="INTEGER" />
			<result column="lxmc" property="lxmc" jdbcType="VARCHAR" />
		</association>
	</resultMap>

	<select id="getTotal" resultType="java.lang.Integer"
		parameterType="com.dragon.book.util.PageBean">
		select
		count(*)
		from
		t_book b,t_publish p ,t_type t
		where
		b.pub_id=p.pub_id and b.type_id =
		t.type_id
		<if test="dim !=null and dim !=''">
			and b.sm like '%${dim}%' or
			b.zz like
			'%${dim}%'
		</if>
		<if test="s_type !=null and s_type !=''">
			and t.type_id ='${s_type}'
		</if>
		<if test="s_tsdl !=null and s_tsdl !=''">
			and b.tsdl ='${s_tsdl}'
		</if>
	</select>

	<select id="selectByDim" resultMap="BaseResultMap"
		parameterType="com.dragon.book.util.PageBean">
		select
		b.id id, b.isbn isbn, b.sm sm ,b.pub_id pub_id,
		p.pub_name
		pub_name, b.zz
		zz,t.type_id type_id, t.lxmc lxmc, b.tsdl
		tsdl, b.status
		status, b.cs
		cs
		from
		t_book b,t_publish p ,t_type t
		where
		b.pub_id=p.pub_id and b.type_id = t.type_id

		<if test="s_type !=null and s_type !=''">
			and t.type_id ='${s_type}'
		</if>
		<if test="s_tsdl !=null and s_tsdl !=''">
			and b.tsdl ='${s_tsdl}'
		</if>

		<if test="dim !=null and dim !=''">
			and b.sm like '%${dim}%' or
			b.zz like
			'%${dim}%'
		</if>

		ORDER BY sm limit #{page},#{pagesize}
	</select>

	<select id="getBooksKey" resultMap="BaseResultMap">
		select
		b.id
		id, b.isbn isbn, b.sm sm ,b.pub_id pub_id,
		p.pub_name
		pub_name, b.zz
		zz,t.type_id type_id, t.lxmc lxmc, b.tsdl
		tsdl, b.status
		status, b.cs
		cs
		from
		t_book b,t_publish p ,t_type t
		where
		b.pub_id=p.pub_id and b.type_id
		= t.type_id
	</select>
	
	<select id="selectEBookByDim" resultMap="EBookResultMap"
		parameterType="com.dragon.book.util.PageBean">
		select e.e_book_id e_book_id,e.e_book_xm e_book_xm , t.lxmc
		lxmc,e.tszl tszl
		from t_e_book e ,t_type t where e.type_id = t.type_id
		<if test="s_type !=null and s_type !=''">
			and t.type_id ='${s_type}'
		</if>
		<if test="s_tsdl !=null and s_tsdl !=''">
			and e.tszl ='${s_tsdl}'
		</if>

		<if test="dim !=null and dim !=''">
			and e.e_book_xm like '%${dim}%' 
		</if>
		ORDER BY e.e_book_xm limit #{page},#{pagesize}
	</select>
	
	<select id="getEBookKey" resultMap="EBookResultMap">
		select
		e.e_book_id e_book_id,e.e_book_xm e_book_xm , t.lxmc
		lxmc,e.tszl tszl
		from t_e_book e ,t_type t where e.type_id = t.type_id

	</select>
	
	<select id="selectById" resultMap="BookResultMap" parameterType="java.lang.String">
		select
		b.id id, b.isbn isbn, b.sm sm ,b.pub_id pub_id,
		p.pub_name
		pub_name, b.zz
		zz,t.type_id type_id, t.lxmc lxmc, b.tsdl
		tsdl, b.status
		status, b.cs
		cs,b.cbrq cbrq
		from
		t_book b,t_publish p ,t_type t
		where
		b.pub_id=p.pub_id and b.type_id =
		t.type_id
		and id =#{id}
	</select>

</mapper>